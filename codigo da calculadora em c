#include <stdio.h>

int main() {
    float num1, num2; // Variáveis para armazenar os números
    float soma, subtracao, multiplicacao, divisao;

    // Entrada de dados
    printf("Digite o primeiro número: ");
    scanf("%f", &num1);

    printf("Digite o segundo número: ");
    scanf("%f", &num2);

    // Cálculos
    soma = num1 + num2;
    subtracao = num1 - num2;
    multiplicacao = num1 * num2;

    // Verifica se o segundo número é zero antes de dividir
    if (num2 != 0)
        divisao = num1 / num2;
    else
        divisao = 0; // evita erro de divisão por zero

    // Saída de resultados
    printf("\n=== Resultados ===\n");
    printf("Soma: %.2f\n", soma);
    printf("Subtração: %.2f\n", subtracao);
    printf("Multiplicação: %.2f\n", multiplicacao);

    if (num2 != 0)
        printf("Divisão: %.2f\n", divisao);
    else
        printf("Divisão: impossível (divisão por zero)\n");

    return 0;
}
